<h1>Kittens Blog</h1>
<p><%= link_to 'New kitten', new_kitten_path %></p>

<% @kittens.each do |k| %>
  <div>
    <h3><%= link_to k.name, k %>, <%= k.age %> years old</h3>
    <p>Cuteness: <%= k.cuteness %></p>
    <p>Softness: <%= k.softness %></p>
    <p><%= link_to 'Delete this kitten', kitten_path(k), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
  </div>
<% end %>
